                    <button type="button" class="btn btn-secondary"><i class="fas fa-chevron-down"></i></button>
                  </div>
                  <div class="sortby-field">
                    <select class="custom-select">
                      <option selected="">Sort By</option>
                      <option value="1">Date Created</option>
                      <option value="2">Date Updated</option>
                      <option value="3">Popularity</option>
                    </select>
                  </div>
                </div>
                <div class="item-grid pen-grid" >
                    <% projectPens.forEach(pen=> { %>
                    <div class="single-pen">
                      <div class="thumbnail-wrap">
                        <div class="grid-preview-image" style="background-image: url(<%= pen.background %>);"></div>
                      </div>
                      <div class="pen-title">
                        <span><%= pen.title %> by <%= pen.author %></span>
                      </div>
                      <div class="pen-stats">
                        <div class="pen-stat like">
                          <i class="fas fa-heart"></i>                        
                          <span><%= pen.like %></span>
                        </div>
                        <div class="pen-stat comment">
