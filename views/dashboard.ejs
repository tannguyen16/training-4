        <main role="main" class="ml-sm-auto col-main">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div class="d-flex" id="dashboard-header">
              <h1 class="h1 mb-3 font-weight-bold">Dashboard</h1>
              <div class="profile-dropdown" id="profile-dropdown">
                <button class="btn btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <img src="/images/profile.jpeg" alt="profile" id="profile-picture" width="40px" height="40px">
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="#">Dashboard</a>
                  <a class="dropdown-item" href="#">Profile</a>
                  <a class="dropdown-item" href="#">New Pen</a>
                  <a class="dropdown-item" href="#">New Project</a>
                  <a class="dropdown-item" href="#">New Collection</a>
                  <a class="dropdown-item" href="#">Settings</a>
                  <a class="dropdown-item" href="#">Log Out</a>
                </div>
              </div>
            </div>
          </div>
          <div class="main-content">
            <ul class="nav nav-tabs">
              <li class="nav-tabs-item">
                <a class="nav-link active" data-toggle="tab" href="#pen">
                  <i class="fas fa-box icon-cyan"></i>
                  <span>Pen</span>
                </a>
              </li>
              <li class="nav-tabs-item">
                <a class="nav-link" data-toggle="tab" href="#projects">
                  <i class="fas fa-box icon-yellow"></i>
                  <span>Projects</span>
                </a>
              </li>
              <li class="nav-tabs-item">
                <a class="nav-link" data-toggle="tab" href="#collection">
                  <i class="fas fa-box icon-purple"></i>
                  <span>Collection</span>
                </a>
              </li>
              <li class="nav-tabs-item">
                <a class="nav-link" data-toggle="tab" href="#deleted">                  
                  <i class="fas fa-box icon-grey"></i>
                  <span>Deleted</span>
                </a>
              </li>
            </ul>
            <div id="dashboard-tab-content" class="tab-content">
              <div class="tab-pane tab-pen fade active show" id="pen">
                <div class="search-options" id="search-options">
                  <div class="search-field">
                    <form class="form-inline my-2 my-lg-0">
                      <input class="form-control mr-sm-2" type="text" placeholder="Search">
                      <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                  </div>
                  <div class="view-field">
                    <select class="custom-select">
                      <option selected="">View</option>
                      <option value="1">All</option>
                      <option value="2">Public</option>
                      <option value="3">Private</option>
                      <option value="4">Fork</option>
                    </select>
                  </div>
                  <div class="tag-field">
                    <input type="text" class="form-control" placeholder="Tags" id="tags">
                  </div>
                </div>

                <div class="sort-options" id="sort-options">
                  <div class="btn-group sort-field" role="group" aria-label="grid-list-options">
                    <button type="button" class="btn btn-secondary">Grid</button>
                    <button type="button" class="btn btn-secondary">List</button>
                  </div>
                  <div class="btn-group sort-direction" role="group" aria-label="sort-direction">
                    <button type="button" class="btn btn-secondary"><i class="fas fa-chevron-up"></i></button>
                    <button type="button" class="btn btn-secondary"><i class="fas fa-chevron-down"></i></button>
                  </div>
                  <div class="sortby-field">
                    <select class="custom-select">
                      <option selected="">Sort By</option>
                      <option value="1">Date Created</option>
                      <option value="2">Date Updated</option>
                      <option value="3">Popularity</option>
                    </select>
                  </div>
                </div>

                <div class="item-grid pen-grid" >
                    <% personalPens.forEach(pen=> { %>
                    <div class="single-pen">
                      <div class="thumbnail-wrap">
                        <div class="grid-preview-image" style="background-image: url(<%= pen.background %>);"></div>
                      </div>
                      <div class="pen-title">
                        <span><%= pen.title %> by <%= pen.author %></span>
                      </div>
                      <div class="pen-stats">
                        <div class="pen-stat like">
                          <i class="fas fa-heart"></i>                        
                          <span><%= pen.like %></span>
                        </div>
                        <div class="pen-stat comment">
                          <i class="fas fa-comment"></i>
                          <span><%= pen.comment %></span>
                        </div>
                        <div class="pen-stat view">
                          <i class="fas fa-eye"></i>
                          <span><%= pen.view %></span>
                        </div>
                      </div>
                    </div> 
                    <% }); %>
                </div>
              </div>
              <div class="tab-pane tab-projects fade" id="projects">
                <div class="search-options" id="search-options">
                  <div class="search-field">
                    <form class="form-inline my-2 my-lg-0">
                      <input class="form-control mr-sm-2" type="text" placeholder="Search">
