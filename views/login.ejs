<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <script src="https://kit.fontawesome.com/7bccef4198.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
  	<link href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/darkly/bootstrap.min.css" rel="stylesheet" integrity="sha384-rCA2D+D9QXuP2TomtQwd+uP50EHjpafN+wruul0sXZzX/Da7Txn4tB9aLMZV4DZm" crossorigin="anonymous">  
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <nav class="d-none d-md-block bg-dark sidebar">
          <div class="sidebar-sticky">
            <img src="/images/logo.png" alt="Codepen" id="logo-sidebar">
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center mt-4 mb-1 text-warning">
              <span>EXPLORE</span>
              <a class="d-flex align-items-center text-muted" href="#">
              </a>
            </h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Picks
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Popular
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Topics
                </a>
              </li>
            </ul>
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center mt-4 mb-1 text-success">
              <span>GROW</span>
              <a class="d-flex align-items-center text-muted" href="#">
              </a>
            </h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Jobs
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  CodePen
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Challenges
                </a>
              </li>
            </ul>
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center mt-4 mb-1 text-info">
              <span>COMPANIES</span>
              <a class="d-flex align-items-center text-muted" href="#">
              </a>
            </h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Hire Talent
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Create a Team
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  Advertise
                </a>
              </li>
            </ul>
            <ul class="nav flex-column pt-3">
              <li class="nav-item">
                <a class="nav-link text-muted" href="#">
                  Newsletter
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-muted" href="#">
                  Blog
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-muted" href="#">
                  Docs & Support
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10">
          <div id="search-header" class="d-flex">
            <input class="form-control form-control-dark" type="text" placeholder="Search CodePen..." aria-label="Search">
            <a href="/signup" class="header-button">Sign Up</a>
          </div>          
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div class="m-auto col-lg-7">
              <form class="form-signin" class="text-center" method="POST" action="/user/login">
                <img src="/images/logo.png" alt="Codepen" height="52" width="276">
                <h1 class="h1 mb-3 font-weight-bold">Log In!</h1>
                <div class="form-group">
                  <label class="col-form-label col-form-label-lg" for="username">USERNAME OR EMAIL</label>
                  <input class="form-control form-control-lg" type="text" id="username" name="username">
                  <% if (errors && errors.username) { %>
                    <p class="text-danger"><%= errors.username %></p>
                  <% } %>
                  <label class="col-form-label col-form-label-lg" for="password">PASSWORD</label>
                  <input class="form-control form-control-lg" type="password" id="password" name="password">
                  <% if (errors && errors.password) { %>
                    <p class="text-danger"><%= errors.password %></p>
                  <% } %>
                  <% if (errors && errors.message) { %>
                    <p class="text-danger"><%= errors.message %></p>
                  <% } %>
                </div>
                <button class="btn btn-lg btn-success btn-block mt-5" type="submit">Log In</button>
                <div class="text-center pt-4 pb-4">
                  <a href="#" class="card-link">Forgot Password?</a>
                </div>
                <div class="card">
                  <div class="card-body text-center">
                    Need an account? <a href="/signup" class="card-link">Sign up now!</a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>